<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="layoutSlideStyle">
    </style>

    <style name="layoutBodyStyle">
        <item name="android:layout_height">165px</item>
        <item name="android:padding">13px</item>
    </style>

    <style name="layoutNavigationStyle">
        <item name="android:layout_alignParentBottom">true</item>

    </style>

    <style name="layoutTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">0px</item>
        <item name="android:layout_marginBottom">12px</item>
    </style>

    <style name="textWhite">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25px</item>
    </style>

    <style name="textGreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#98BD2D</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28px</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

</resources>
